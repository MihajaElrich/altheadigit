<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="partner_insert_extra_fields" model="ir.ui.view">
			<field name="name">res.partner.extra.fields</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name ="arch" type="xml">
				<xpath expr="//field[@name='website']" position="after">
					<field name="facebook" placeholder="Ex: www.facebook.com/username"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>